        .content-main {
            width: 680px;
        }

        .inputID {
            width: 128px;
            height: 38px;
            background: #FFFFFF;
            border: 1px solid rgba(97, 117, 134, 0.2);
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 20px;
            padding-left: 10px;
            font-size: 14px;
        }

        .inputName {
            width: 263px;
            height: 38px;
            background: #FFFFFF;
            /* secondary/lighter */

            border: 1px solid rgba(97, 117, 134, 0.2);
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 20px;
            padding-left: 10px;
            font-size: 14px;
        }

        .inputPrice {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
            width: 161px;
            height: 32px;
            font-size: 14px;
            background: #FFFFFF;
            padding-left: 10px;
            padding-right: 10px;
            border: 1px solid rgba(97, 117, 134, 0.2);
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 20px;
            margin-top: 7px;
        }

        .input-des {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 0px;
            gap: 10px;
            width: 401px;
            height: 126px;
            background: #FFFFFF;
            border: 1px solid rgba(97, 117, 134, 0.2);
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 20px;
        }

        .labelInput {
            font-family: 'Outfit';
            font-style: normal;
            font-weight: 400;
            font-size: 20px;
            line-height: 20px;
            display: flex;
            align-items: center;
            margin-left: 6px;
            color: #000000;
        }

        .fieldSelect {
            background: #FFFFFF;
            box-shadow: 0px 4px 14px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 208px;
            height: 44px;
            font-size: 16px;
            padding-left: 10px;
            padding-right: 10px;
            border: none;
        }

        .labelSelect {
            font-size: 16px;
            width: 100%;
            line-height: 20px;
            margin: 0px;
        }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="row flex-nowrap">
